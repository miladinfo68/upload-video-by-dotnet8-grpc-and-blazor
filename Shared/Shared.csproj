<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>


    <ItemGroup>
      <PackageReference Include="Google.Protobuf" Version="3.27.0" />
      <PackageReference Include="Grpc" Version="2.46.6" />
      <PackageReference Include="Grpc.Core" Version="2.46.6" />
		<PackageReference Include="Grpc.Net.Client" Version="2.48.0" />
      <PackageReference Include="Grpc.Tools" Version="2.46.6">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

   <ItemGroup>
	   <Protobuf Include="Protos\*.proto" GrpcServices="Both" OutputDir="AutoGenerated" PreserveFileName="true" />
	   <!--<Protobuf Include="protos\*.proto" />-->
    </ItemGroup>

   <ItemGroup>
     <None Remove="Protos\people.proto" />
     <None Remove="Protos\uploader.proto" />
   </ItemGroup>

   <ItemGroup>
     <Protobuf Update="Protos\uploader.proto">
       <GrpcServices>Both</GrpcServices>
       <OutputDir>AutoGenerated</OutputDir>
       <PreserveFileName>true</PreserveFileName>
     </Protobuf>
   </ItemGroup>

</Project>
